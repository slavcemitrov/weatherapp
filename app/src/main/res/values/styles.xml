<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="TextStyleDegrees" parent="Theme.AppCompat">
        <item name="android:textSize">@dimen/text_degrees</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:fontFamily">bold</item>
    </style>

    <style name="TextStyleInfo" parent="Theme.AppCompat">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TextStyleInfoSmall" parent="Theme.AppCompat">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="TextStyleSearch" parent="Theme.AppCompat">
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">@dimen/dimen_2</item>
        <item name="android:layout_margin">@dimen/dimen_2</item>
        <item name="android:maxLength">50</item>
    </style>

</resources>